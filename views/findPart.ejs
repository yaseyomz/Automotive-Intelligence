<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
    <body>
        <%- include("./partials/nav.ejs", { active: "parts" }) %>
        <div class="find content">
            <form class="search" action="/parts/find" method="post">
                <input type="text" name="search" placeholder="Search.." required>
	            <button type="submit"><i class="fa fa-search"></i></button>
            </form>
            <ul class="search-list">
                <% if (locals.list && list.length > 0) { %>
                    <% list.forEach(part => { %>
                        <li><a href="/parts/<%= part.id %>"><%= `${part.type} ${part.name}, Size ${part.size}` %></a></li>
                    <% }) %>
                <% } else if (locals.list) { %>
                    <p>Part '<%= part %>' cannot be found!</p>
                <% } %>
            </ul>
        </div>
        <%- include("./partials/footer.ejs") %>
    </body>
</html>